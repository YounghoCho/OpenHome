<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <!-- template -->
    <definition name="layout" template="/WEB-INF/views/template/layout.jsp">
    	<put-attribute name="title" value="OpenHomeLayout"/>
        <put-attribute name="header" value="/WEB-INF/views/template/header.jsp" />
        <put-attribute name="top" value="/WEB-INF/views/template/top.jsp" />
        <put-attribute name="menu" value="/WEB-INF/views/template/menu.jsp" />
        <put-attribute name="body" value="/WEB-INF/views/template/body.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/template/footer.jsp" />
    </definition>
    
    <!-- pages -->
    <!-- 여기서 name은, Controller에서 데이터 처리 후 return되는 view name이다. -->
    <definition name="homeview" extends="layout">
    	<put-attribute name="title" value="오픈 홈"/>
        <put-attribute name="body" value="/WEB-INF/views/body-home.jsp" />
    </definition> 
    
    <definition name="boardview" extends="layout">
    	<put-attribute name="title" value="게시판"/>
        <put-attribute name="body" value="/WEB-INF/views/body-board.jsp" />
    </definition>

    <definition name="readview" extends="layout">
    	<put-attribute name="title" value="읽기"/>
        <put-attribute name="body" value="/WEB-INF/views/body-read.jsp" />
    </definition> 
</tiles-definitions>