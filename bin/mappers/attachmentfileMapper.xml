<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="attachmentfile">
    <insert id="addFile" parameterType="com.worksmobile.openhome.model.AttachmentFile">
		INSERT INTO attachmentfile(articleNum, originalFileName , storedFileName, fileDate, fileSize, fileAttacher) 
		VALUES (#{articleNum}, #{originalFileName}, #{storedFileName}, now(), #{fileSize}, #{fileAttacher})
	</insert>
	
	<select id="getFiles" parameterType="int" resultType="com.worksmobile.openhome.model.AttachmentFile">
		SELECT * 
		FROM attachmentfile
		WHERE articleNum = #{articleNum}
	</select>
	
	<delete id="removeFiles" parameterType="int">
		DELETE
		FROM attachmentfile
		WHERE articleNum = #{articleNum}
	</delete>
	
	<delete id="removeFile" parameterType="int">
		DELETE
		FROM attachmentfile
		WHERE fileNum = #{fileNum}
	</delete>
</mapper>