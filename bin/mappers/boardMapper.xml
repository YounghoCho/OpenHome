<mapper namespace="board">

	<select id="getMenuList" resultType="com.worksmobile.openhome.model.Board">
		SELECT 
			boardOrderNum, boardTitle, boardNum
		FROM 
			board
		ORDER BY
			boardOrderNum
	</select>
	
	<delete id="removeBoard" parameterType="com.worksmobile.openhome.model.Board">
		DELETE
		FROM 
			board
		WHERE 
			boardNum = #{boardNum}
	</delete>
	
</mapper>